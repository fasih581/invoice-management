</head>

<body>
    <div class="box">
        <div class="invoice">
            <div class="sidebar">
                <div class="sidehead">
                    <h1>INVOICE</h1>
                </div>
                <div class="sideNavbar_top">
                    <ul>
                        <li><a href="/"><span class="material-symbols-outlined">home</span>Home</a></li>
                        <li><a href="/product"><span class="material-symbols-outlined">inventory</span>Products</a></li>
                        <li><a href="#"><span class="material-symbols-outlined">folder_copy</span>My Invoice</a></li>
                        <li><a href="#"><span class="material-symbols-outlined">person</span>customers</a></li>
                    </ul>
                </div>
                <!-- <div class="sidedropdown">
                    <div class="dropdownMenu">
                        <select class="sidedrop">
                            <option selected>Create New</option>
                            <option>INVOICE</option>
                            <option>DELIVERY NOTE</option>
                            <option>QUOTATION</option>
                        </select>
                        <div class="drop_icon">
                            <span class="material-symbols-outlined">add</span>
                        </div>
                    </div>
                </div> -->
                <div class="sideNavbar_bottom">
                    <ul>
                        <li><a href="#"><span class="material-symbols-outlined">settings</span>settings</a></li>
                        <li><a href="#"><span class="material-symbols-outlined">logout</span>Log Out</a></li>
                    </ul>
                </div>
            </div>
            <div class="mainpage">
                <div class="mainHead">
                    <h1>CUSTOMER</h1>
                    <button type="button" class="btn btn-primary" onclick="createCustomerOn()">Create
                    </button>
                </div>

                <!-- mainbody -->
                <div class="mainbody">
                    <table class="table ptable">
                        <thead>
                            <tr>
                                <th scope="col">SL.NO</th>
                                <th scope="col">CUSTOMER NAME</th>
                                <th scope="col">ADDRESS</th>
                                <th scope="col"></th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody id="customerTbody">
                        </tbody>
                    </table>
                </div>
                <!-- mainbody end -->

                <!-- overlay div -->
                <div class="overlay" id="over_lay"></div>
                <!-- overlay div End -->

                <!-- New invoice model -->
                <div class="modal" id="newCustomerInvoice">
                    <div class="modal-dialog">
                        <div class="modal-content" id="clearfrom">
                            <form  id="newCustomer">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="staticBackdropLabel">Create a Customer</h1>
                                    <button type="button" class="btn-close" onclick="createCustomerOff(), clearForm()"></button>
                                </div>
                                <div class="modal-body">
                                    <div class="modal_mainbody">
                                        <div class="adressTable">
                                            <div class="adressRow">
                                                <h3>Salutation</h3>
                                                <div class="addressInput">
                                                    <select class="form-group form-select"
                                                        id="customerSalutation" required>
                                                        <option value="" selected>select</option>
                                                        <option value="Mr.">Mr.</option>
                                                        <option value="Mrs.">Mrs.</option>
                                                        <option value="Miss.">Miss.</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="adressRow">
                                                <h3>Customer Name</h3>
                                                <div class="addressInput">
                                                    <input type="text" class="form-control" id="customerName"
                                                        placeholder="Customer Name">
                                                </div>
                                            </div>
                                            <div class="adressRow">
                                                <h3>Address</h3>
                                                <div class="addressInput">
                                                    <textarea class="form-control" id="customeraddress"
                                                        rows="3"></textarea>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer save_btn">
                                    <button type="button" class="btn btn-outline-primary"
                                        onclick="createCustomerOff(), clearForm()">Cancel</button>
                                    <button class="btn btn-primary" id="addcustomer" type="button">Save</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- New invoice model end -->

                <!-- edit modal -->
                <div class="modal" id="editCustomerInvoice">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <form action="#" id="editCustomer">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5">Edit a Invoice</h1>
                                    <button type="button" class="btn-close" onclick="editCustomerOff()"></button>
                                </div>
                                <div class="modal-body">
                                    <div class="modal_mainbody">
                                        <div class="adressTable">
                                            <div class="adressRow">
                                                <h3>Salutation</h3>
                                                <div class="addressInput">
                                                    <select class="form-group form-select" id="editcustomerSalutation">
                                                        <option value="" selected>select</option>
                                                        <option value="Mr.">Mr.</option>
                                                        <option value="Mrs.">Mrs.</option>
                                                        <option value="Miss.">Miss.</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="adressRow">
                                                <h3>Customer Name</h3>
                                                <div class="addressInput">
                                                    <input type="text" class="form-control" id="editcustomerName"
                                                        placeholder="Customer Name">
                                                </div>
                                            </div>
                                            <div class="adressRow">
                                                <h3>Address</h3>
                                                <div class="addressInput">
                                                    <textarea class="form-control" id="editcustomeraddress"
                                                        rows="3"></textarea>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer save_btn">
                                    <button type="button" class="btn btn-outline-primary"
                                        onclick="editCustomerOff()">Cancel</button>
                                    <button class="btn btn-primary" type="submit">Edit</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- edit modal end -->

                <!--  Delete Modal -->
                <div class="modal" id="deleteCustomerInvoice">
                    <form action="" id="DeleteBtn">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="staticBackdropLabel">Delete Invoice</h1>
                                    <button type="button" class="btn-close" onclick="deleteCustomerOff()"></button>
                                </div>
                                <div class="modal-body">
                                    <p>Are you sure you want to delete this Customer?</p>
                                </div>
                                <div class="modal-footer save_btn">
                                    <button type="button" class="btn btn-outline-primary"
                                        onclick="deleteCustomerOff()">Cancle</button>
                                    <button type="button" class="btn btn-primary">Delete</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <!-- delete model end -->

            </div>
        </div>
    </div>

    <!-- javascript link -->
    <script src="/js/customer.js"></script>
    <!-- javascript link end -->
</body>

</html>