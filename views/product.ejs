                <!-- New item model -->
                <div class="modal" id="staticBackdrop">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <form action="/invoice/product" method="post" id="newProduct">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="staticBackdropLabel">Create a product</h1>
                                    <button type="button" class="btn-close" onclick="createProductOff()"></button>
                                </div>
                                <div class="modal-body">

                                    <div class="modal_mainbody">
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th scope="col">SL.NO</th>
                                                    <th scope="col">ITEM CODE</th>
                                                    <th scope="col">DESCRIPITION</th>
                                                    <th scope="col">PACKING UNIT</th>
                                                    <th scope="col">UOM</th>
                                                    <th scope="col">UNIT PRICE</th>
                                                    <th scope="col"></th>
                                                </tr>
                                            </thead>
                                            <tbody id="tableBody">
                                            </tbody>
                                        </table>
                                        <div class="newline">
                                            <button type="button" id="addRowButton" class="newbtn">
                                                <span class="material-symbols-outlined">add_circle</span>ADD NEW LINE
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer save_btn">
                                    <button type="button" class="btn btn-outline-primary"
                                        onclick="createProductOff()">Cancel</button>
                                    <button class="btn btn-primary" type="submit">Save</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- New item model end -->

                <!-- edit modal -->
                <div class="modal" id="editstaticBackdrop">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <form action="#" id="editProduct">
                                <div class="modal-header">
                                    <h1 class="modal-title fs-5" id="staticBackdropLabel">Edit a Invoice</h1>
                                    <button type="button" class="btn-close" onclick="editProductOff()"></button>
                                </div>
                                <div class="modal-body">
                                    <div class="modal_mainbody">
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th scope="col">SL.NO</th>
                                                    <th scope="col">ITEM CODE</th>
                                                    <th scope="col">DESCRIPITION</th>
                                                    <th scope="col">PACKING UNIT</th>
                                                    <th scope="col">UOM</th>
                                                    <th scope="col">UNIT PRICE</th>
                                                </tr>
                                            </thead>
                                            <tbody id="editTbody">
                                                <tr class="items">
                                                    <th scope="row">#1</th>
                                                    <td><input type="text" class="form-control"
                                                            placeholder="Enter the Item Code" id="editItemCode">
                                                    </td>
                                                    <td><input type="text" class="form-control"
                                                            placeholder="Enter the Item Code" id="editItemName">
                                                    </td>
                                                    <td><input type="text" class="form-control"
                                                            placeholder="Enter the Packing Unit" id="editPackingUnit">
                                                    </td>
                                                    <td><select class="form-select" aria-label="Default select example"
                                                            id="editUnitSelect">
                                                            <option selected>Select Item Unit</option>
                                                            <option value="BOX">BOX</option>
                                                            <option value="EA">EA</option>
                                                            <option value="CT">CT</option>
                                                            <option value="PCE">PCE</option>
                                                        </select></td>
                                                    <td><input type="number" class="form-control"
                                                            placeholder="Enter The Unit Price" min="0.00" step="0.001"
                                                            id="editUnitPrice">
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="modal-footer save_btn">
